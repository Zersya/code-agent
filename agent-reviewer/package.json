{
  "name": "repopo-reviewer-hooks",
  "version": "0.1.0",
  "description": "GitLab webhook integration for code review with embeddings",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:webhook": "node dist/webhook-server.js",
    "dev": "bun --watch src/index.ts",
    "dev:webhook": "bun --watch src/webhook-server.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:dashboard": "node test-dashboard.js",
    "setup:documentation": "ts-node scripts/setup-documentation.ts",
    "backfill-completion-rates": "node dist/scripts/backfill-completion-rates.js",
    "backfill-notion-timing-fields": "node dist/scripts/backfill-notion-timing-fields.js",
    "verify-completion-rate-integration": "node dist/scripts/verify-completion-rate-integration.js",
    "test-completion-rate-endpoints": "node dist/scripts/test-completion-rate-endpoints.js"
  },
  "dependencies": {
    "@notionhq/client": "^2.3.0",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "date-fns": "4.1.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-format": "^1.0.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bun": "1.2.21",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.17",
    "@types/pg": "^8.10.9",
    "@types/pg-format": "^1.0.5",
    "@types/uuid": "^9.0.8",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
